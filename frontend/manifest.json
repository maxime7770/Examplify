{
    "name": "Examplify",
    "version": "1.0",
    "description": "Examplify: turning complexity into clarity with concise, real-world examples.",
    "manifest_version": 3,
    "action": {
      "default_popup": "popup.html"
    },
    "permissions": [
      "storage"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["contentScript.js"],
        "css": ["styles.css"],
        "all_frames": true,
        "run_at": "document_idle"
      }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
  }
  }